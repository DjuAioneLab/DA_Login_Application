<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0B3B"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/et_name"
        android:layout_width="234dp"
        android:layout_height="46dp"
        android:layout_marginTop="226dp"
        android:background="@drawable/borderline"
        android:ems="10"
        android:hint="이름을 입력해주세요."
        android:fontFamily="@font/lineseedkr_bd"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="#A4A4A4"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="234dp"
        android:layout_height="46dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/borderline"
        android:ems="10"
        android:hint="전화번호를 입력하세요."
        android:fontFamily="@font/lineseedkr_bd"
        android:inputType="phone"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:textColorHint="#A4A4A4"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/et_pwd"
        app:layout_constraintTop_toBottomOf="@+id/et_pwd" />


    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="234dp"
        android:layout_height="46dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/borderline"
        android:fontFamily="@font/lineseedkr_bd"
        android:ems="10"
        android:hint="비밀번호를 입력하세요."
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:inputType="numberPassword"
        android:textColor="@color/white"
        android:textColorHint="#A4A4A4"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/et_name"
        app:layout_constraintTop_toBottomOf="@+id/et_name" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="79dp"
        android:fontFamily="@font/lineseedkr_bd"
        android:text="비밀번호는 6자리 이상으로 설정 해주세요."
        android:textColor="#ffffff"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_phone" />

    <Button
        android:id="@+id/finishregister_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/lineseedkr_bd"
        android:text="가입"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:layout_marginBottom="108dp"
        android:fontFamily="@font/lineseedkr_bd"
        android:text="Disaster Alert+"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>