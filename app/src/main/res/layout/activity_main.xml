<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:layout_marginBottom="39dp"
        android:text="로그인 성공!"
        android:textSize="60dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_latitude"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.091" />

    <TextView
        android:id="@+id/txt_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:text="위도"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/display_latitude"
        app:layout_constraintEnd_toEndOf="@+id/txt_longitude"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/txt_longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:text="경도"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/display_longitude"
        app:layout_constraintStart_toStartOf="@+id/display_longitude"
        app:layout_constraintTop_toBottomOf="@+id/display_latitude" />

    <TextView
        android:id="@+id/display_latitude"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        android:background="#FFCDD2"
        android:text="0.00"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_longitude"
        app:layout_constraintEnd_toEndOf="@+id/display_longitude"
        app:layout_constraintStart_toStartOf="@+id/txt_latitude"
        app:layout_constraintTop_toBottomOf="@+id/txt_latitude" />

    <TextView
        android:id="@+id/display_longitude"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="44dp"
        android:background="#FFCDD2"
        android:text="0.00"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/update_Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_longitude" />

    <Button
        android:id="@+id/update_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="251dp"
        android:text="업데이트"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/display_longitude"
        app:layout_constraintStart_toStartOf="@+id/display_longitude"
        app:layout_constraintTop_toBottomOf="@+id/display_longitude" />

</androidx.constraintlayout.widget.ConstraintLayout>